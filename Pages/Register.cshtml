@page
@model OpenSocials.Pages.RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = "";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">

<head>
  <script src="../assets/js/color-modes.js"></script>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />

  <title>Cadastro</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    
   <link rel="stylesheet" href="~/css/register.css" />

</head>

<body class="d-flex align-items-center py-4 bg-body-tertiary">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

  <main class="form-signin w-100 m-auto">
      <div class="container">
          <div class="row align-items-start">
              <div class="col-2">
                  <image src="../assets/bons-fluidos-logo.png" width="50"></image>
              </div>
              <div class="col-10">
                  <h1 class="h3 mb-3 fw-normal">Faça o Cadastro</h1>
              </div>
          </div>
      </div>

      <form method="post">
          <div class="row g-2">
              <div class="col-6 form-floating">
                  <input asp-for="LoginDB.Username" class="form-control" placeholder="name@example.com" />
                  <label asp-for="LoginDB.Username">Username</label>
              </div>
              <div class="col-6 form-floating">
                  <input asp-for="LoginDB.Nickname" class="form-control" placeholder="name@example.com" />
                  <label asp-for="LoginDB.Nickname">Apelido</label>
              </div>
          </div>

          <div class="col">
              <div class="form-floating my-3">
                  <input asp-for="LoginDB.Name" class="form-control" placeholder="name@example.com" />
                  <label asp-for="LoginDB.Name">Nome</label>
              </div>
          </div>

          <div class="form-floating">
              <input asp-for="LoginDB.Password" type="password" class="form-control" placeholder="Password" />
              <label asp-for="LoginDB.Password">Senha</label>
          </div>

          <div class="form-floating">
              <input asp-for="LoginDB.Password" type="password" class="form-control" placeholder="Password" />
              <label asp-for="LoginDB.Password">Confirmar Senha</label>
          </div>

          <div class="form-check text-start my-2 container">
              <label class="fw-bold"></label>
              <div class="row">
                  <div class="form-check text-start my-2 container">
                      <label class="fw-bold">Permissões</label>
                      <div class="row">
                          <div class="col-4 font-size">
                              <input asp-for="LoginDB.Is_Admin" class="form-check-input" />
                              <label class="form-check-label">Administrador</label>
                          </div>
                          <div class="col-4 font-size">
                              <input asp-for="LoginDB.Is_Reviewer" class="form-check-input" />
                              <label class="form-check-label">Revisador</label>
                          </div>
                          <div class="col-4 font-size">
                              <input asp-for="LoginDB.Is_Commenter" class="form-check-input" />
                              <label class="form-check-label">Comentador</label>
                          </div>
                      </div>
                  </div>
              </div>
          </div>

          <button type="submit" class="btn w-100 py-2 btn-submit">Registrar</button>

          <div class="row justify-content-end">
              <div class="col-5 font-size">
                  <label>Já tem uma conta? </label>
                  <a href="Login" class="btn-register">Entrar</a>
              </div>
          </div>
          <p class="mt-5 mb-3 text-body-secondary">&copy; 2023</p>
      </form>

  </main>
  <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
